{
	"compileOnSave": true,
	"compilerOptions": {
    "target": "es5",           
    "module": "commonjs",                 
    "lib": ["es6", "es2017", "dom"], 
    "declaration": true,     
    "outDir": "lib",      
    "strict": true,        
    "types": ["node"],
    "esModuleInterop": true,   
    "resolveJsonModule": true
  },
	"moduleResolution": "node",
	"files": [
	  "index.ts"
	],
	"include": [
		"src/**/*.ts"
	]
}