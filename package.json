{
  "name": "scaffoldme-cli",
  "version": "1.0.0",
  "private": true,
  "keywords": [
    "cli",
    "scaffoldme",
    "typescript",
    "nodejs"
  ],
  "author": "Scaffoldme Team",
  "license": "MIT",
  "scripts": {
    "postinstall": "lerna bootstrap && npm run build",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "lerna publish",
    "watch": "lerna run watch --parallel",
    "link": "lerna exec npm link",
    "start": "ts-node bin/scaffoldme.ts",
    "publish:testing": "lerna publish prerelease --preid=testing --exact --no-git-tag-version --no-push --dist-tag=testing",
    "publish:ci": "lerna publish from-package -m 'chore(release): publish [skip ci]' --exact --conventional-commits"
  },
  "dependencies": {
    "@types/node": "^12.12.17",
    "commander": "^4.0.1",
    "prettier": "^1.19.1"
  },
  "devDependencies": {
    "@angular-devkit/core": "^9.0.3",
    "@types/commander": "^2.9.1",
    "husky": "^3.0.0",
    "lerna": "^3.16.4",
    "tslint": "^5.9.1",
    "typescript": "^3.6.3"
  }
}
