{
  "name": "scaffoldme-cli",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "lerna publish",
    "watch": "lerna run watch --parallel",
    "link": "lerna exec npm link",
    "start": "ts-node bin/scaffoldme.ts",
    "go": "npm i && npm run bootstrap && npm run build"
  },
  "bin": {
    "scaffoldme": "build/bin/scaffoldme.js"
  },
  "devDependencies": {
    "lerna": "^3.16.4",
    "tslint": "^5.9.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@types/node": "^12.11.7"
  }
}
