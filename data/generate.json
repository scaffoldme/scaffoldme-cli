{
  "configuration": [
    {
      "name": "Site web client",
      "type": "front-end",
      "version": "1.0.0",
      "description": "Site web client pour les mariages",
      "repository": {
        "type": "git"
      },
      "author": "",
      "framework": {
        "name": "angular",
        "version": "6.0.0"
      },
      "typing": {
        "name": "typescript"
      },
      "style": {
        "name": "css"
      },
      "environnements": {
        "dev": {
          "debug": true,
          "apiUrl": "//0.0.0.0:3000"
        },
        "prod": {
          "debug": false,
          "apiUrl": "//0.0.0.0:3000"
        }
      }
    },
    {
      "name": "Backend",
      "type": "back-end",
      "version": "1.0.0",
      "description": "Site web client pour les mariages",
      "repository": {
        "type": "git"
      },
      "author": "",
      "framework": {
        "name": "loopback",
        "version": "4.0.0"
      },
      "typing": {
        "name": "typescript"
      },
      "database": {
        "type": "mongodb"
      },
      "environnements": {
        "dev": {
          "debug": true,
          "apiUrl": "//0.0.0.0:3000"
        },
        "prod": {
          "debug": false,
          "apiUrl": "//0.0.0.0:3000"
        }
      }
    },
    {
      "name": "database",
      "type": "storage",
      "framework": {
        "name": "mongodb"
      }
    }
  ],
  "entity": {
    "user": {
      "public": true,
      "attributes": {
        "id": {
          "type": "number",
          "id": true,
          "required": true
        },
        "username": {
          "type": "string",
          "required": true
        },
        "lastname": {
          "type": "string",
          "required": true
        },
        "email": {
          "type": "string",
          "required": true
        },
        "country": {
          "type": "string",
          "default": "FR"
        }
      },
      "relations": {
        "roles": {
          "type": "hasMany",
          "model": "role",
          "foreignKey": "roleId"
        }
      }
    },
    "roles": {
      "public": false,
      "attributes": {
        "id": {
          "type": "number",
          "id": true,
          "required": true
        },
        "name": {
          "type": "string",
          "required": true
        }
      },
      "relations": {
        "users": {
          "type": "hasMany",
          "model": "user",
          "foreignKey": "roleId"
        }
      }
    }
  }
}
