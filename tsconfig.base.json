{
  "compilerOptions": {
    "types": ["node"],
    "allowUnreachableCode": false,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "target": "es2018",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018"]
  }
}
