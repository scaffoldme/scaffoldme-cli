{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNestJsApplication",
  "title": "NestJs Application Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application.",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "author": {
      "type": "string",
      "description": "NestJs application author.",
      "default": ""
    },
    "description": {
      "type": "string",
      "description": "NestJs application description.",
      "default": ""
    },
    "directory": {
      "type": "string",
      "description": "NestJs application destination directory"
    },
    "version": {
      "type": "string",
      "description": "NestJs application version.",
      "default": "0.0.1"
    },
    "language": {
      "type": "string",
      "description": "NestJs application language."
    },
    "packageManager": {
      "type": "string",
      "description": "NestJs application package manager."
    },
    "dependencies": {
      "type": "string",
      "description": "NestJs application dependencies."
    },
    "devDependencies": {
      "type": "string",
      "description": "NestJs application development dependencies."
    },
    "packageJsonName": {
      "description": "The package json file .",
      "type": "string",
      "default": "package"
    }
  }
}
