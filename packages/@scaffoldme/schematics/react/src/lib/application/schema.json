{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsLoopbackApplication",
  "title": "React Application Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application.",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "author": {
      "type": "string",
      "description": "React application author.",
      "default": ""
    },
    "description": {
      "type": "string",
      "description": "React application description.",
      "default": ""
    },
    "directory": {
      "type": "string",
      "description": "React application destination directory"
    },
    "version": {
      "type": "string",
      "description": "React application version.",
      "default": "0.0.1"
    },
    "language": {
      "type": "string",
      "description": "React application language."
    },
    "packageManager": {
      "type": "string",
      "description": "React application package manager."
    },
    "dependencies": {
      "type": "string",
      "description": "React application dependencies."
    },
    "devDependencies": {
      "type": "string",
      "description": "React application development dependencies."
    },
    "packageJsonName": {
      "description": "The package json file .",
      "type": "string",
      "default": "package"
    }
  }
}
