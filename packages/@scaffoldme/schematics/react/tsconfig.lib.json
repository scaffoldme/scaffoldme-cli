{
  "compilerOptions": {
    "outDir": "./dist",
    "types": ["node"],
    "allowUnreachableCode": false,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es2018",
    "lib": ["es2018"]
  },
  "include": ["src/lib", "src/index.ts"],
  "exclude": ["node_modules", "src/**/__tests__/*.ts", "src/**/files/**"]
}
